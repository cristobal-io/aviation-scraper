{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "iata": {
        "type": "string"
      },
      "icao": {
        "type": "string"
      },
      "coordinates": {
        "type": "object",
        "required":[
        "latitude",
        "longitude"
        ],
        "properties": {
          "latitude": {
            "type": "string"
          },
          "longitude": {
            "type": "string"
          }
        }
      },
      "runway": {
        "type": "object",
        "required":[
        "direction",
        "length",
        "surface"
        ],
        "properties": {
          "direction": {
            "type": "string"
          },
          "length": {
            "type": "object",
            "minproperties": 1,
            "properties": {
              "ft": {
                "type": "integer"
              },
              "m": {
                "type": "integer"
              }
            }
          },
          "surface": {
            "type": "string"
          }
        }
      }
    },
    "required": [
      "iata",
      "icao",
      "coordinates",
      "runway"
    ]
  },
  "minItems": 1
}
